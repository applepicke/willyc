.container-fluid.text-center
  %h1 Tiny Game
  %p Get notified when there are new builds!

  .col-md-4.col-md-offset-4.gmb
    = form_tag games_tiny_path, method: 'post' do
      .input-group
        = text_field_tag 'email', nil, placeholder: 'email', class: 'form-control'
        %span.input-group-btn
          %input.btn.btn-default{type: 'submit', value: 'Submit'}

  .col-md-6.col-md-offset-3.gmb
    %h2 Latest Builds

    .col-md-4
      %h4 Windows x32
      - if !@x32_builds.empty?
        = link_to 'Download', aws_url(@x32_builds.first.url)

    .col-md-4
      %h4 Windows x64
      - if !@x64_builds.empty?
        = link_to 'Download', aws_url(@x64_builds.first.url)

    .col-md-4
      %h4 OSX
      - if !@osx_builds.empty?
        = link_to 'Download', aws_url(@osx_builds.first.url)

  .col-md-6.col-md-offset-3
    %h2 Previous Builds

    .col-md-4
      %h4 Windows x32
      - @x32_builds.each do |build|
        %p= link_to build.created_at.strftime('%Y-%m-%d'), aws_url(build.url)

    .col-md-4
      %h4 Windows x64
      - @x64_builds.each do |build|
        %p= link_to build.created_at.strftime('%Y-%m-%d'), aws_url(build.url)

    .col-md-4
      %h4 OSX
      - @osx_builds.each do |build|
        %p= link_to build.created_at.strftime('%Y-%m-%d'), aws_url(build.url)

